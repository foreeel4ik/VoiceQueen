<Page x:Class="VoiceQueen.Views.ForgotPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Border Margin="40" CornerRadius="18" Background="#331A1326" BorderBrush="#26FFFFFF" BorderThickness="1" Padding="24">
            <StackPanel Spacing="10">
                <TextBlock Text="Password recovery" FontSize="24" FontWeight="Bold" />
                <TextBlock Text="Reset workflows will be available soon." Opacity="0.7" />
                <TextBlock Text="Until then, sign in with admin/admin to explore the app." Opacity="0.6" />
                <Button Content="Back to Login" HorizontalAlignment="Left" Width="140" Click="BackToLogin" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
