<Application x:Class="VoiceQueen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#FF9C27B0</Color>
            <Color x:Key="AccentColor">#FF7C4DFF</Color>
            <Color x:Key="BackgroundColor">#FF12121B</Color>
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
            <SolidColorBrush x:Key="PanelBrush" Color="#221F2E" />
            <SolidColorBrush x:Key="TextBrush" Color="#FFECECEC" />
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
