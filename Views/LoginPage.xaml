<Page x:Class="VoiceQueen.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:VoiceQueen"
      Background="{StaticResource BackgroundBrush}">
    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#FF2F2440" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Border" CornerRadius="12" Background="{TemplateBinding Background}" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3A2F4E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF4A3964" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#221F2E" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="#332C1A3B" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,6,0,0" />
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}" />
        </Style>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource InputBoxStyle}" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="48">
            <Image Width="120" Height="120" Source="../Assets/LogoVoiceQueen.png" Stretch="Uniform" HorizontalAlignment="Left" />
            <TextBlock Text="Welcome to VoiceQueen" FontSize="28" FontWeight="Bold" Margin="0,24,0,0" />
            <TextBlock Text="Sign in to manage your voice sessions" Opacity="0.7" />

            <StackPanel Margin="0,26,0,0">
                <TextBlock Text="Username" />
                <TextBox x:Name="UsernameBox" Style="{StaticResource InputBoxStyle}" />

                <TextBlock Text="Password" Margin="0,14,0,0" />
                <PasswordBox x:Name="PasswordBox" />

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
                    <CheckBox x:Name="RememberCheck" Content="Remember me" Foreground="{StaticResource TextBrush}" />
                    <TextBlock x:Name="ValidationText" Foreground="Tomato" Margin="14,0,0,0" VerticalAlignment="Center" />
                </StackPanel>

                <Button Content="Login" Style="{StaticResource RoundedButton}" Background="{StaticResource AccentBrush}" Click="OnLoginClick" Margin="0,18,0,0" />

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Spacing="12">
                    <Button Content="Create account" Style="{StaticResource RoundedButton}" Background="#332F2440" Click="OnRegisterClick" />
                    <Button Content="Forgot password" Style="{StaticResource RoundedButton}" Background="#332F2440" Click="OnForgotPasswordClick" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Border Grid.Column="1" Margin="0,40,40,40" CornerRadius="18" Background="#331A1326" BorderBrush="#26FFFFFF" BorderThickness="1" Padding="20" >
            <StackPanel VerticalAlignment="Center" Spacing="14">
                <TextBlock Text="Future updates" FontSize="22" FontWeight="SemiBold" />
                <TextBlock Text="This area will highlight new registration and recovery flows." TextWrapping="Wrap" Opacity="0.7" />
                <TextBlock Text="Stay tuned for smoother onboarding and team features." TextWrapping="Wrap" Opacity="0.65" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
