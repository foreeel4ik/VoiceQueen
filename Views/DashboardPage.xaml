<Page x:Class="VoiceQueen.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:VoiceQueen"
      Background="{StaticResource BackgroundBrush}">
    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#FF2F2440" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Border" CornerRadius="12" Background="{TemplateBinding Background}" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" To="0.9" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.04" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.04" Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3E2D54" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                        <ControlTemplate.Resources>
                            <ScaleTransform x:Key="Scale" />
                        </ControlTemplate.Resources>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PresetCardButton" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="CardScale" ScaleX="1" ScaleY="1" />
                            </Grid.RenderTransform>
                            <Border x:Name="Glow" CornerRadius="18" BorderBrush="#A47C4DFF" BorderThickness="0" Opacity="0" />
                            <Border x:Name="Card" CornerRadius="16" Background="#2F221A33" Padding="12" BorderBrush="#26FFFFFF" BorderThickness="1">
                                <ContentPresenter />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.2" />
                                            <ThicknessAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="BorderThickness" To="3" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleX" To="1.03" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleY" To="1.03" Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                            <ThicknessAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="BorderThickness" To="0" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Glow" Property="Opacity" Value="1" />
                                <Setter TargetName="Glow" Property="BorderThickness" Value="3" />
                                <Setter TargetName="Card" Property="BorderBrush" Value="#7C4DFF" />
                                <Setter TargetName="Card" Property="Background" Value="#3E291C55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="16" Padding="16" Background="#26FFFFFF" BorderBrush="#32FFFFFF" BorderThickness="1">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                    <Image Width="46" Height="46" Source="../Assets/LogoVoiceQueen.png" Stretch="Uniform" />
                    <StackPanel>
                        <TextBlock Text="VoiceQueen" FontSize="22" FontWeight="Bold" />
                        <TextBlock Text="Real-time voice magic" Opacity="0.7" />
                    </StackPanel>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="{Binding Username, Source={x:Static local:AppState.Instance}, StringFormat=Welcome, {0}}" VerticalAlignment="Center" Opacity="0.75" />
                    <Button Content="Logout" Style="{StaticResource RoundedButton}" Background="#FF402B58" Click="Logout_Click" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid x:Name="DashboardContent" Grid.Row="1" Margin="0,16,0,16" IsEnabled="{Binding IsAuthenticated, Source={x:Static local:AppState.Instance}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="18" Background="#331A1326" BorderBrush="#26FFFFFF" BorderThickness="1" Padding="20">
                <StackPanel Spacing="14">
                    <TextBlock Text="Audio Routing" FontSize="18" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <StackPanel Width="220">
                            <TextBlock Text="Input Device" />
                            <ComboBox x:Name="InputDevices" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                        <StackPanel Width="220">
                            <TextBlock Text="Output Device" />
                            <ComboBox x:Name="OutputDevices" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                        <StackPanel Width="160">
                            <TextBlock Text="Pitch" />
                            <Slider x:Name="PitchSlider" Minimum="0.5" Maximum="1.5" Value="1" TickFrequency="0.1" IsSnapToTickEnabled="False" Margin="0,10,0,0" />
                        </StackPanel>
                        <StackPanel Width="120" VerticalAlignment="Bottom">
                            <Button x:Name="StartButton" Style="{StaticResource RoundedButton}" Background="#FF8E2DE2" Click="StartButton_Click">Start</Button>
                            <Button x:Name="StopButton" Style="{StaticResource RoundedButton}" Background="#FF402B58" Click="StopButton_Click" Margin="4,6,4,0">Stop</Button>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Presets" FontSize="18" FontWeight="SemiBold" Margin="0,12,0,0" />
                    <ItemsControl ItemsSource="{Binding Presets}" Margin="0,6,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton Style="{StaticResource PresetCardButton}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Click="PresetCard_Click"
                                              Margin="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.ColumnSpan="2" Height="80" CornerRadius="12">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#FF7C4DFF" Offset="0" />
                                                    <GradientStop Color="#FF2B1C42" Offset="1" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border CornerRadius="12" Background="#33FFFFFF" />
                                            <TextBlock Text="Artwork" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6" />
                                        </Border>
                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                            <Border Width="26" Height="26" CornerRadius="13" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1">
                                                <Viewbox Stretch="Uniform">
                                                    <Path Data="M10 2 L14 8 L10 14 L6 8 Z" Fill="#FF7C4DFF" Width="18" Height="18" />
                                                </Viewbox>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Subtitle}" Opacity="0.75" FontSize="12" />
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Grid.Row="2" Grid.ColumnSpan="2" CornerRadius="8" Background="#22FFFFFF" Padding="8,4,8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Category}" Opacity="0.75" FontSize="12" />
                                        </Border>
                                    </Grid>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Border Margin="0,16,0,0" Padding="16" CornerRadius="14" Background="#221A2433">
                        <StackPanel>
                            <TextBlock Text="Signal" FontSize="14" FontWeight="SemiBold" />
                            <ProgressBar x:Name="LevelMeter" Height="16" Maximum="1" Minimum="0" Margin="0,10,0,0" Foreground="#FF7C4DFF" Background="#33221A33" />
                            <TextBlock x:Name="LevelText" Text="Level: 0%" Opacity="0.7" Margin="0,6,0,0" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" CornerRadius="18" Background="#331A1326" BorderBrush="#26FFFFFF" BorderThickness="1" Padding="20" Margin="16,0,0,0">
                <StackPanel Spacing="12" VerticalAlignment="Center">
                    <Image Width="160" Height="160" Source="../Assets/LogoRadius.png" Stretch="Uniform" HorizontalAlignment="Center" />
                    <TextBlock Text="Powered by RADIUS" HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="VoiceQueen" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Live voice transformation with rich presets" TextAlignment="Center" Opacity="0.7" />
                </StackPanel>
            </Border>
        </Grid>

        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <TextBlock Text="Powered by RADIUS" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.6" />
        </DockPanel>
    </Grid>
</Page>
