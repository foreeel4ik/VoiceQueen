<Page x:Class="VoiceQueen.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:VoiceQueen"
      Background="{StaticResource BackgroundBrush}">
    <Page.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#FF2F2440" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Border" CornerRadius="12" Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="ButtonShadow" BlurRadius="8" Color="#807C4DFF" ShadowDepth="0" Opacity="0.35" />
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" To="0.9" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.04" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.04" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" Storyboard.TargetProperty="BlurRadius" To="12" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" Storyboard.TargetProperty="Opacity" To="0.55" Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" Storyboard.TargetProperty="BlurRadius" To="8" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" Storyboard.TargetProperty="Opacity" To="0.35" Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3E2D54" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                        <ControlTemplate.Resources>
                            <ScaleTransform x:Key="Scale" />
                        </ControlTemplate.Resources>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PresetCardButton" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="CardScale" ScaleX="1" ScaleY="1" />
                            </Grid.RenderTransform>
                            <Border x:Name="Glow" CornerRadius="18" BorderBrush="#A47C4DFF" BorderThickness="0" Opacity="0" />
                            <Border x:Name="Card" CornerRadius="16" Background="#2F221A33" Padding="12" BorderBrush="#26FFFFFF" BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="CardShadow" BlurRadius="6" Color="#667C4DFF" ShadowDepth="0" Opacity="0.35" />
                                </Border.Effect>
                                <ContentPresenter />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.2" />
                                            <ThicknessAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="BorderThickness" To="3" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleX" To="1.03" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleY" To="1.03" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="CardShadow" Storyboard.TargetProperty="BlurRadius" To="12" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardShadow" Storyboard.TargetProperty="Opacity" To="0.6" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                            <ThicknessAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="BorderThickness" To="0" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.15" />
                                            <DoubleAnimation Storyboard.TargetName="CardShadow" Storyboard.TargetProperty="BlurRadius" To="6" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardShadow" Storyboard.TargetProperty="Opacity" To="0.35" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Glow" Property="Opacity" Value="1" />
                                <Setter TargetName="Glow" Property="BorderThickness" Value="3" />
                                <Setter TargetName="Card" Property="BorderBrush" Value="#7C4DFF" />
                                <Setter TargetName="Card" Property="Background" Value="#3E291C55" />
                                <Setter TargetName="CardShadow" Property="BlurRadius" Value="14" />
                                <Setter TargetName="CardShadow" Property="Opacity" Value="0.72" />
                                <Setter TargetName="CardScale" Property="ScaleX" Value="1.05" />
                                <Setter TargetName="CardScale" Property="ScaleY" Value="1.05" />
                                <Setter TargetName="Glow" Property="Effect">
                                    <Setter.Value>
                                        <BlurEffect Radius="18" />
                                    </Setter.Value>
                                </Setter>
                                <Trigger.EnterActions>
                                    <BeginStoryboard x:Name="PulseGlow">
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" From="0.85" To="1" Duration="0:0:1.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardShadow" Storyboard.TargetProperty="BlurRadius" From="12" To="16" Duration="0:0:1.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <RemoveStoryboard BeginStoryboardName="PulseGlow" />
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.25" />
                                            <ThicknessAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="BorderThickness" To="0" Duration="0:0:0.25" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardShadow" Storyboard.TargetProperty="BlurRadius" To="6" Duration="0:0:0.2" />
                                            <DoubleAnimation Storyboard.TargetName="CardShadow" Storyboard.TargetProperty="Opacity" To="0.35" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border x:Name="HeaderPanel" Grid.Row="0" CornerRadius="16" Padding="16" Background="#26FFFFFF" BorderBrush="#32FFFFFF" BorderThickness="1" Opacity="0">
            <Border.RenderTransform>
                <TranslateTransform Y="-10" />
            </Border.RenderTransform>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.35" />
                            <DoubleAnimation Storyboard.TargetProperty="(TranslateTransform.Y)" To="0" Duration="0:0:0.35" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                    <Image Width="46" Height="46" Source="../Assets/LogoVoiceQueen.png" Stretch="Uniform" />
                    <StackPanel>
                        <TextBlock Text="VoiceQueen" FontSize="22" FontWeight="Bold" />
                        <TextBlock Text="Real-time voice magic" Opacity="0.7" />
                    </StackPanel>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="{Binding Username, Source={x:Static local:AppState.Instance}, StringFormat='Welcome, {0}'}" VerticalAlignment="Center" Opacity="0.75" />
                    <Button Content="Logout" Style="{StaticResource RoundedButton}" Background="#FF402B58" Click="Logout_Click" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid x:Name="DashboardContent" Grid.Row="1" Margin="0,16,0,16" IsEnabled="{Binding IsAuthenticated, Source={x:Static local:AppState.Instance}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="18" Background="#331A1326" BorderBrush="#26FFFFFF" BorderThickness="1" Padding="20">
                <StackPanel Spacing="14">
                    <TextBlock Text="Audio Routing" FontSize="18" FontWeight="SemiBold" />
                    <UniformGrid Columns="3" Rows="2" Margin="0,4,0,0" HorizontalAlignment="Stretch">
                        <StackPanel Margin="4">
                            <TextBlock Text="Input Device" />
                            <ComboBox x:Name="InputDevices" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                        <StackPanel Margin="4">
                            <TextBlock Text="Output Device" />
                            <ComboBox x:Name="OutputDevices" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                        <StackPanel Margin="4">
                            <TextBlock Text="Sample Rate" />
                            <ComboBox ItemsSource="{Binding SampleRates}" SelectedItem="{Binding SelectedSampleRate, Mode=TwoWay}" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                        <StackPanel Margin="4">
                            <TextBlock Text="Channels" />
                            <ComboBox ItemsSource="{Binding ChannelOptions}" SelectedItem="{Binding SelectedChannels, Mode=TwoWay}" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                        <StackPanel Margin="4">
                            <TextBlock Text="Buffer (ms)" />
                            <ComboBox ItemsSource="{Binding BufferOptions}" SelectedItem="{Binding SelectedBufferMs, Mode=TwoWay}" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                        <StackPanel Margin="4">
                            <TextBlock Text="Latency (ms)" />
                            <ComboBox ItemsSource="{Binding LatencyOptions}" SelectedItem="{Binding SelectedLatencyMs, Mode=TwoWay}" Margin="0,6,0,0" Height="34" />
                        </StackPanel>
                    </UniformGrid>
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                        <StackPanel Width="180">
                            <TextBlock Text="Pitch" />
                            <Slider x:Name="PitchSlider" Minimum="0.5" Maximum="1.5" Value="1" TickFrequency="0.1" IsSnapToTickEnabled="False" Margin="0,10,0,0" />
                        </StackPanel>
                        <StackPanel Width="180">
                            <TextBlock Text="Direct Monitoring" />
                            <CheckBox IsChecked="{Binding DirectMonitoringEnabled, Mode=TwoWay}" Content="Hear dry input" Margin="0,10,0,0" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Bottom">
                            <Button x:Name="StartButton" Style="{StaticResource RoundedButton}" Background="#FF8E2DE2" Click="StartButton_Click" Width="110">Start</Button>
                            <Button x:Name="StopButton" Style="{StaticResource RoundedButton}" Background="#FF402B58" Click="StopButton_Click" Width="110">Stop</Button>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Presets" FontSize="18" FontWeight="SemiBold" Margin="0,12,0,0" />
                    <ItemsControl ItemsSource="{Binding Presets}" Margin="0,6,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton Style="{StaticResource PresetCardButton}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Click="PresetCard_Click"
                                              Margin="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.ColumnSpan="2" Height="80" CornerRadius="12">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#FF7C4DFF" Offset="0" />
                                                    <GradientStop Color="#FF2B1C42" Offset="1" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border CornerRadius="12" Background="#33FFFFFF" />
                                            <TextBlock Text="Artwork" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6" />
                                        </Border>
                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                            <Border Width="26" Height="26" CornerRadius="13" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1">
                                                <Viewbox Stretch="Uniform">
                                                    <Path Data="M10 2 L14 8 L10 14 L6 8 Z" Fill="#FF7C4DFF" Width="18" Height="18" />
                                                </Viewbox>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Subtitle}" Opacity="0.75" FontSize="12" />
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Grid.Row="2" Grid.ColumnSpan="2" CornerRadius="8" Background="#22FFFFFF" Padding="8,4,8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Category}" Opacity="0.75" FontSize="12" />
                                        </Border>
                                    </Grid>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Border Margin="0,16,0,0" Padding="16" CornerRadius="14" Background="#221A2433">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Processing" FontSize="14" FontWeight="SemiBold" />
                            <Grid Margin="0,6,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="4" Spacing="6">
                                    <TextBlock Text="Gain & Dynamics" FontWeight="SemiBold" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Input Gain" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-24" Maximum="24" Value="{Binding Parameters.InputGainDb, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Output Gain" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-24" Maximum="24" Value="{Binding Parameters.OutputGainDb, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <CheckBox Content="Noise Gate" IsChecked="{Binding Parameters.NoiseGateEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Threshold" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0.005" Maximum="0.1" Value="{Binding Parameters.NoiseGateThreshold, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Attack" Width="90" Opacity="0.8" />
                                        <Slider Minimum="1" Maximum="80" Value="{Binding Parameters.NoiseGateAttackMs, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Release" Width="90" Opacity="0.8" />
                                        <Slider Minimum="20" Maximum="400" Value="{Binding Parameters.NoiseGateReleaseMs, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <CheckBox Content="Compressor" IsChecked="{Binding Parameters.CompressorEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Threshold" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-40" Maximum="0" Value="{Binding Parameters.CompressorThreshold, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Ratio" Width="90" Opacity="0.8" />
                                        <Slider Minimum="1" Maximum="8" Value="{Binding Parameters.CompressorRatio, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Attack" Width="90" Opacity="0.8" />
                                        <Slider Minimum="1" Maximum="80" Value="{Binding Parameters.CompressorAttackMs, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Release" Width="90" Opacity="0.8" />
                                        <Slider Minimum="10" Maximum="250" Value="{Binding Parameters.CompressorReleaseMs, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Knee" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0" Maximum="18" Value="{Binding Parameters.CompressorKneeDb, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Makeup" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-6" Maximum="12" Value="{Binding Parameters.CompressorMakeupDb, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="4" Spacing="6">
                                    <TextBlock Text="Tone & Space" FontWeight="SemiBold" />
                                    <CheckBox Content="EQ" IsChecked="{Binding Parameters.EqEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Low" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-12" Maximum="12" Value="{Binding Parameters.EqLowGain, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Mid" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-12" Maximum="12" Value="{Binding Parameters.EqMidGain, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="High" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-12" Maximum="12" Value="{Binding Parameters.EqHighGain, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Stereo Width" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0" Maximum="2" Value="{Binding Parameters.StereoWidth, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <CheckBox Content="Reverb" IsChecked="{Binding Parameters.ReverbEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Mix" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0" Maximum="0.6" Value="{Binding Parameters.ReverbMix, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Decay" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0.1" Maximum="1" Value="{Binding Parameters.ReverbDecay, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <CheckBox Content="Delay" IsChecked="{Binding Parameters.DelayEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Time" Width="90" Opacity="0.8" />
                                        <Slider Minimum="50" Maximum="800" Value="{Binding Parameters.DelayTimeMs, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Feedback" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0" Maximum="0.9" Value="{Binding Parameters.DelayFeedback, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Mix" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0" Maximum="1" Value="{Binding Parameters.DelayMix, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <CheckBox Content="Chorus" IsChecked="{Binding Parameters.ChorusEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Depth" Width="90" Opacity="0.8" />
                                        <Slider Minimum="1" Maximum="20" Value="{Binding Parameters.ChorusDepthMs, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Rate" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0.1" Maximum="5" Value="{Binding Parameters.ChorusRate, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <CheckBox Content="Formant Shift" IsChecked="{Binding Parameters.FormantEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Shift" Width="90" Opacity="0.8" />
                                        <Slider Minimum="-12" Maximum="12" Value="{Binding Parameters.FormantShift, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <CheckBox Content="Distortion" IsChecked="{Binding Parameters.DistortionEnabled, Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Drive" Width="90" Opacity="0.8" />
                                        <Slider Minimum="1" Maximum="3" Value="{Binding Parameters.DistortionDrive, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Mix" Width="90" Opacity="0.8" />
                                        <Slider Minimum="0" Maximum="1" Value="{Binding Parameters.DistortionMix, Mode=TwoWay}" Width="200" />
                                    </StackPanel>
                                    <ComboBox SelectedValuePath="Tag" SelectedValue="{Binding Parameters.DistortionType, Mode=TwoWay}" Margin="0,4,0,0">
                                        <ComboBoxItem Content="Soft Clip" Tag="{x:Static local:DistortionMode.SoftClip}" />
                                        <ComboBoxItem Content="Hard Clip" Tag="{x:Static local:DistortionMode.HardClip}" />
                                        <ComboBoxItem Content="Fuzz" Tag="{x:Static local:DistortionMode.Fuzz}" />
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Margin="0,16,0,0" Padding="16" CornerRadius="14" Background="#221A2433">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Monitoring" FontSize="14" FontWeight="SemiBold" />
                            <UniformGrid Columns="2" Rows="1" Margin="0,4,0,0">
                                <StackPanel Margin="4">
                                    <TextBlock Text="Input" FontWeight="SemiBold" />
                                    <ProgressBar x:Name="InputMeterBar" Height="12" Maximum="1" Minimum="0" Margin="0,6,0,0" Foreground="#FF7C4DFF" Background="#33221A33">
                                        <ProgressBar.RenderTransform>
                                            <ScaleTransform ScaleX="1" />
                                        </ProgressBar.RenderTransform>
                                    </ProgressBar>
                                    <TextBlock Text="{Binding InputMeterPeak, StringFormat=Peak: {0:P0}}" Opacity="0.7" />
                                </StackPanel>
                                <StackPanel Margin="4">
                                    <TextBlock Text="Output" FontWeight="SemiBold" />
                                    <ProgressBar x:Name="OutputMeterBar" Height="12" Maximum="1" Minimum="0" Margin="0,6,0,0" Foreground="#FF4DD0E1" Background="#33221A33">
                                        <ProgressBar.RenderTransform>
                                            <ScaleTransform ScaleX="1" />
                                        </ProgressBar.RenderTransform>
                                    </ProgressBar>
                                    <TextBlock Text="{Binding OutputMeterPeak, StringFormat=Peak: {0:P0}}" Opacity="0.7" />
                                </StackPanel>
                            </UniformGrid>
                            <Border Height="90" Background="#1AFFFFFF" CornerRadius="10" BorderBrush="#22FFFFFF" BorderThickness="1" Padding="6">
                                <Grid>
                                    <TextBlock Text="Waveform" Opacity="0.5" Margin="6" />
                                    <Canvas Height="78">
                                        <Polyline Points="{Binding WaveformPoints}" Stroke="#FF7C4DFF" StrokeThickness="2" />
                                    </Canvas>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" CornerRadius="18" Background="#331A1326" BorderBrush="#26FFFFFF" BorderThickness="1" Padding="20" Margin="16,0,0,0">
                <StackPanel Spacing="12" VerticalAlignment="Center">
                    <Image Width="160" Height="160" Source="../Assets/LogoRadius.png" Stretch="Uniform" HorizontalAlignment="Center" />
                    <TextBlock Text="Powered by RADIUS" HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="VoiceQueen" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Live voice transformation with rich presets" TextAlignment="Center" Opacity="0.7" />
                </StackPanel>
            </Border>
        </Grid>

        <DockPanel x:Name="FooterPanel" Grid.Row="2" Margin="0,12,0,0" Opacity="0">
            <DockPanel.RenderTransform>
                <TranslateTransform Y="8" />
            </DockPanel.RenderTransform>
            <DockPanel.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.35" />
                            <DoubleAnimation Storyboard.TargetProperty="(TranslateTransform.Y)" To="0" Duration="0:0:0.35" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </DockPanel.Triggers>
            <TextBlock Text="Powered by RADIUS" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.6" />
        </DockPanel>
    </Grid>
</Page>
